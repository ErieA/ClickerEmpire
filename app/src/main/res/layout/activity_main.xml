<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:fitsSystemWindows="true">


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:screenOrientation="portrait"
            tools:context="not.bored.clickerempire.MainActivity">


            <TextView
                android:id="@+id/population"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="68dp"
                android:text="Population : 0/0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/create_worker"
                android:layout_width="144dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="124dp"
                android:text="Create Workers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/collect_food"
                android:layout_width="144dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Collect Food"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_worker" />

            <Button
                android:id="@+id/collect_wood"
                android:layout_width="144dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Collect Wood"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collect_food" />

            <Button
                android:id="@+id/collect_stone"
                android:layout_width="144dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Collect Stone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collect_wood" />

            <Button
                android:id="@+id/substract_worker"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="124dp"
                android:text="-"
                app:layout_constraintStart_toEndOf="@+id/create_worker"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/add_worker"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="124dp"
                android:text="+"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/num_workers"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="124dp"
                android:inputType="number"
                android:maxLines="1"
                android:text="1"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/add_worker"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toEndOf="@+id/substract_worker"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/num_food"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="188dp"
                android:text="0/200"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/collect_food"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/num_wood"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="0/200"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/collect_wood"
                app:layout_constraintTop_toBottomOf="@+id/num_food" />

            <TextView
                android:id="@+id/num_stone"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="0/200"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/collect_stone"
                app:layout_constraintTop_toBottomOf="@+id/num_wood" />

            <TextView
                android:id="@+id/FOOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="194dp"
                android:text="0/s"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/num_food"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/WOOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="124dp"
                android:layout_marginTop="40dp"
                android:text="0/s"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/num_wood"
                app:layout_constraintTop_toBottomOf="@+id/FOOD" />

            <TextView
                android:id="@+id/STONE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:text="0/s"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/num_stone"
                app:layout_constraintTop_toBottomOf="@+id/WOOD" />

            <Button
                android:id="@+id/resetdb"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="reset"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/buildings"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Buildings"
                app:layout_constraintBottom_toTopOf="@+id/fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collect_stone" />

            <Button
                android:id="@+id/upgrades"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:text="Upgrades"
                app:layout_constraintBottom_toTopOf="@+id/fragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collect_stone" />

            <fragment
                android:id="@+id/fragment"
                android:name="not.bored.clickerempire.jobs"
                android:layout_width="0dp"
                android:layout_height="314dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/resetdb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout="@layout/fragment_jobs" />

            <TextView
                android:id="@+id/unemployed"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Unemployed: 0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/create_worker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/population"
                app:layout_constraintVertical_bias="0.25" />

            <Button
                android:id="@+id/jobs"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Jobs"
                app:layout_constraintBottom_toTopOf="@+id/fragment"
                app:layout_constraintEnd_toStartOf="@+id/upgrades"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toEndOf="@+id/buildings"
                app:layout_constraintTop_toBottomOf="@+id/collect_stone" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"/>

</android.support.v4.widget.DrawerLayout>