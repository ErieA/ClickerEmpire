<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:fitsSystemWindows="true">


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />
            <TextView
                    android:id="@+id/population"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="Population : 0/0"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/unemployed"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="Unemployed: 0"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/create_worker"
                        android:layout_width="144dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:text="Create Workers" />

                    <Button
                        android:id="@+id/substract_worker"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:text="-" />

                    <EditText
                        android:id="@+id/num_workers"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="1"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/add_worker"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:text="+" />
                </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/collect_food"
                    android:layout_width="144dp"
                    android:layout_height="38dp"
                    android:layout_alignParentLeft="true"
                    android:text="Collect Food" />

                <TextView
                    android:id="@+id/num_food"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_toRightOf="@+id/collect_food"
                    android:text="0/200"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/FOOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0/s" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/collect_wood"
                    android:layout_width="144dp"
                    android:layout_height="38dp"
                    android:layout_alignParentLeft="true"
                    android:text="Collect Wood" />

                <TextView
                    android:id="@+id/num_wood"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_toRightOf="@+id/collect_wood"
                    android:text="0/200"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/WOOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0/s" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/collect_stone"
                    android:layout_width="144dp"
                    android:layout_height="38dp"
                    android:layout_alignParentLeft="true"
                    android:text="Collect Stone" />

                <TextView
                    android:id="@+id/num_stone"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_toRightOf="@+id/collect_stone"
                    android:text="0/200"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/STONE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0/s" />
            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/buildings"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:text="Buildings"
                        android:layout_weight="1"/>

                <Button
                    android:id="@+id/specialresources"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:text="S.Resources"
                    android:textSize="14sp" />
                    <Button
                        android:id="@+id/jobs"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:text="Jobs"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/upgrades"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:text="Upgrades"
                        android:layout_weight="1"/>
                </LinearLayout>

            <fragment
                android:id="@+id/fragment"
                android:name="not.bored.clickerempire.jobs"
                android:layout_width="match_parent"
                android:layout_height="405dp"
                tools:layout="@layout/fragment_jobs" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/resetdb"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="reset"/>
                </LinearLayout>
            </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header"/>

</android.support.v4.widget.DrawerLayout>