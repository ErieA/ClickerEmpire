<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="not.bored.clickerempire.jobs">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/farmers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmers: 0"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/substract_farmer1000"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:text="@string/llll"
                android:textSize="8sp"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/add_farmer1000"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:text="@string/gggg"
                android:textSize="8sp"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/substract_farmer100"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:text="@string/lll"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/substract_farmer1000"/>

            <Button
                android:id="@+id/add_farmer100"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:text="@string/ggg"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/add_farmer1000" />
            <Button
                android:id="@+id/substract_farmer10"
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:text="@string/ll"
                android:textSize="11sp"
                android:layout_toRightOf="@+id/substract_farmer100"/>

            <Button
                android:id="@+id/add_farmer10"
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:text="@string/gg"
                android:textSize="11sp"
                android:layout_toLeftOf="@+id/add_farmer100" />
            <Button
                android:id="@+id/substract_farmer"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:text="@string/l"
                android:layout_toRightOf="@+id/substract_farmer10"/>

            <Button
                android:id="@+id/add_farmer"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:text="@string/g"
                android:layout_toLeftOf="@+id/add_farmer10" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lumberjacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lumberjacks: 0"
                android:textSize="18sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/substract_lumberjack1000"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:text="@string/llll"
                android:textSize="8sp"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/add_lumberjack1000"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:text="@string/gggg"
                android:textSize="8sp"
                android:layout_alignParentRight="true"/>
            <Button
                android:id="@+id/substract_lumberjack100"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:text="@string/lll"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/substract_lumberjack1000"/>

            <Button
                android:id="@+id/add_lumberjack100"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:text="@string/ggg"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/add_lumberjack1000" />

            <Button
                android:id="@+id/substract_lumberjack10"
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:text="@string/ll"
                android:textSize="11sp"
                android:layout_toRightOf="@+id/substract_lumberjack100"/>

            <Button
                android:id="@+id/add_lumberjack10"
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:text="@string/gg"
                android:textSize="11sp"
                android:layout_toLeftOf="@+id/add_lumberjack100" />
            <Button
                android:id="@+id/substract_lumberjack"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:text="@string/l"
                android:layout_toRightOf="@+id/substract_lumberjack10"/>

            <Button
                android:id="@+id/add_lumberjack"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:text="@string/g"
                android:layout_toLeftOf="@+id/add_lumberjack10" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/stonemasons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stonemasons: 0"
                android:textSize="18sp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/substract_stonemason1000"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:text="@string/llll"
                android:textSize="8sp"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/add_stonemason1000"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:text="@string/gggg"
                android:textSize="8sp"
                android:layout_alignParentRight="true"/>
            <Button
                android:id="@+id/substract_stonemason100"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:text="@string/lll"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/substract_stonemason1000"/>

            <Button
                android:id="@+id/add_stonemason100"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:text="@string/ggg"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/add_stonemason1000" />
            <Button
                android:id="@+id/substract_stonemason10"
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:text="@string/ll"
                android:textSize="11sp"
                android:layout_toRightOf="@+id/substract_stonemason100"/>

            <Button
                android:id="@+id/add_stonemason10"
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:text="@string/gg"
                android:textSize="11sp"
                android:layout_toLeftOf="@+id/add_stonemason100" />
            <Button
                android:id="@+id/substract_stonemason"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:text="@string/l"
                android:layout_toRightOf="@+id/substract_stonemason10"/>

            <Button
                android:id="@+id/add_stonemason"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:text="@string/g"
                android:layout_toLeftOf="@+id/add_stonemason10" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
